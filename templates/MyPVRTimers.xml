<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<views>50</views>
	<controls>
		<include>DefaultBackground</include>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" tween="sine" condition="$EXP[infodialog_active]">Conditional</animation>
			<control type="group">
				<include>OpenClose_Left</include>
				<control type="fixedlist" id="50">
					<left>{{ScaleX('0')}}</left>
					<top>{{ScaleY('list_y_offset')}}</top>
					<right>{{ScaleX('860')}}</right>
					<bottom>{{ScaleY('list_y_offset')}}</bottom>
					<onup>50</onup>
					<ondown>50</ondown>
					<onleft>9000</onleft>
					<onright>73</onright>
					<movement>3</movement>
					<focusposition>4</focusposition>
					<pagecontrol>73</pagecontrol>
					<scrolltime>200</scrolltime>
					<itemlayout height="{{ScaleY('100')}}" width="{{ScaleX('tvrecordings_width')}}">
						<control type="label">
							<left>{{ScaleX('30')}}</left>
							<top>{{ScaleY('0')}}</top>
							<right>{{ScaleX('30')}}</right>
							<height>{{ScaleY('100')}}</height>
							<font>font36_title</font>
							<aligny>center</aligny>
							<visible>String.IsEmpty(ListItem.Date)</visible>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="group">
							<visible>!String.IsEmpty(ListItem.Date)</visible>
							<control type="label">
								<left>{{ScaleX('30')}}</left>
								<top>{{ScaleY('10')}}</top>
								<right>{{ScaleX('30')}}</right>
								<height>{{ScaleY('30')}}</height>
								<aligny>top</aligny>
								<label>$INFO[ListItem.ChannelName][COLOR grey]$INFO[ListItem.Label, - ][/COLOR]</label>
							</control>
							<control type="label">
								<left>{{ScaleX('30')}}</left>
								<top>{{ScaleY('53')}}</top>
								<width>{{ScaleX('680')}}</width>
								<height>{{ScaleY('30')}}</height>
								<font>font12</font>
								<aligny>top</aligny>
								<label>$VAR[TimersSubLabel]</label>
							</control>
							<control type="label">
								<right>{{ScaleX('20')}}</right>
								<top>{{ScaleY('13')}}</top>
								<width>{{ScaleX('900')}}</width>
								<height>{{ScaleY('70')}}</height>
								<font>font12</font>
								<align>right</align>
								<aligny>top</aligny>
								<label>$INFO[ListItem.Comment]</label>
							</control>
							<control type="label">
								<right>{{ScaleX('20')}}</right>
								<top>{{ScaleY('53')}}</top>
								<width>{{ScaleX('900')}}</width>
								<height>{{ScaleY('75')}}</height>
								<font>font12</font>
								<align>right</align>
								<aligny>top</aligny>
								<label>$INFO[ListItem.Date]</label>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="{{ScaleY('100')}}" width="{{ScaleX('tvrecordings_width')}}">
						<control type="image">
							<left>{{ScaleX('0')}}</left>
							<top>{{ScaleY('0')}}</top>
							<right>{{ScaleX('0')}}</right>
							<height>{{ScaleY('101')}}</height>
							<texture colordiffuse="button_focus">lists/focus.png</texture>
							<visible>Control.HasFocus(50)</visible>
						</control>
						<control type="label">
							<left>{{ScaleX('30')}}</left>
							<top>{{ScaleY('0')}}</top>
							<right>{{ScaleX('30')}}</right>
							<height>{{ScaleY('100')}}</height>
							<font>font36_title</font>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<visible>String.IsEmpty(ListItem.Date)</visible>
						</control>
						<control type="group">
							<visible>!String.IsEmpty(ListItem.Date)</visible>
							<control type="label">
								<left>{{ScaleX('30')}}</left>
								<top>{{ScaleY('10')}}</top>
								<right>{{ScaleX('30')}}</right>
								<height>{{ScaleY('100')}}</height>
								<aligny>top</aligny>
								<label>$INFO[ListItem.ChannelName]$INFO[ListItem.Label, - ]</label>
							</control>
							<control type="label">
								<left>{{ScaleX('30')}}</left>
								<top>{{ScaleY('53')}}</top>
								<width>{{ScaleX('680')}}</width>
								<height>{{ScaleY('100')}}</height>
								<font>font12</font>
								<aligny>top</aligny>
								<label>$VAR[TimersSubLabel]</label>
							</control>
							<control type="label">
								<right>{{ScaleX('20')}}</right>
								<top>{{ScaleY('13')}}</top>
								<width>{{ScaleX('900')}}</width>
								<height>{{ScaleY('70')}}</height>
								<font>font12</font>
								<align>right</align>
								<aligny>top</aligny>
								<label>$INFO[ListItem.Comment]</label>
							</control>
							<control type="label">
								<right>{{ScaleX('20')}}</right>
								<top>{{ScaleY('53')}}</top>
								<width>{{ScaleX('900')}}</width>
								<height>{{ScaleY('75')}}</height>
								<font>font12</font>
								<align>right</align>
								<aligny>top</aligny>
								<label>$INFO[ListItem.Date]</label>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="group">
				<depth>DepthContentPanel</depth>
				<include>OpenClose_Right</include>
				<width>{{ScaleX('810')}}</width>
				<right>{{ScaleX('0')}}</right>
				<include content="ContentPanel">
					<param name="left" value="{{ScaleX('-72')}}" />
					<param name="width" value="{{ScaleX('970')}}" />
					<param name="top" value="{{ScaleY('-20')}}" />
					<param name="flipx" value="true" />
				</include>
				<control type="scrollbar" id="73">
					<left>{{ScaleX('-50')}}</left>
					<top>{{ScaleY('list_y_offset')}}</top>
					<width>{{ScaleX('12')}}</width>
					<bottom>{{ScaleY('list_y_offset')}}</bottom>
					<onleft>50</onleft>
					<onright>50</onright>
					<orientation>vertical</orientation>
					<animation effect="zoom" start="100,100" end="50,100" center="{{ScaleBorder2('-50,0')}}" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(73)">conditional</animation>
				</control>
				<include>PVRInfoPanel</include>
			</control>
		</control>
		<include content="TopBar">
			<param name="breadcrumbs_label" value="$VAR[BreadcrumbsPVRTimersVar]" />
		</include>
		<include content="BottomBar">
			<param name="info_visible" value="true" />
		</include>
		<control type="label">
			<right>{{ScaleX('20')}}</right>
			<description>Disk usage text</description>
			<include>OpenClose_Right</include>
			<bottom>{{ScaleY('10')}}</bottom>
			<width>{{ScaleX('800')}}</width>
			<height>{{ScaleY('60')}}</height>
			<label>$INFO[PVR.NextTimer]</label>
			<shadowcolor>black</shadowcolor>
			<align>right</align>
			<aligny>center</aligny>
			<wrapmultiline>true</wrapmultiline>
			<font>font27</font>
		</control>
		<control type="group">
			<include>MediaMenuCommon</include>
			<include>PVRSideBar</include>
		</control>
		<control type="label" id="29">
			<font>-</font>
			<include>HiddenObject</include>
		</control>
		<control type="label" id="30">
			<font>-</font>
			<include>HiddenObject</include>
		</control>
	</controls>
</window>
