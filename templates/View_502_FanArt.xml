<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_502_FanArt">
		<control type="group">
			<include>OpenClose_Left</include>
			<left>{{ScaleX('-5')}}</left>
			<visible>Control.IsVisible(502)</visible>
			<include>Visible_Left</include>
			<include content="ListContainer">
				<param name="list_id" value="502" />
				<param name="viewtype_label" value="$LOCALIZE[20445]" />
			</include>
		</control>
		<control type="group">
			<depth>DepthContentPanel</depth>
			<include>OpenClose_Right</include>
			<visible>Control.IsVisible(502)</visible>
			<include>Visible_Right</include>
			<control type="group">
				<right>{{ScaleX('-20')}}</right>
				<width>{{ScaleX('1235')}}</width>
				<include content="ContentPanel">
					<param name="width" value="{{ScaleX('1235')}}" />
					<param name="left" value="{{ScaleX('0')}}" />
					<param name="top" value="{{ScaleY('-20')}}" />
					<param name="flipx" value="true" />
				</include>
				<control type="image">
					<left>{{ScaleX('38')}}</left>
					<right>{{ScaleX('36')}}</right>
					<top>{{ScaleY('115')}}</top>
					<height>{{ScaleY('644')}}</height>
					<fadetime>300</fadetime>
					<texture border="{{ScaleBorder('2')}}" fallback="special://skin/extras/home-images/movie.jpg" background="true">$VAR[FanartImageVar]</texture>
					<aspectratio align="center" aligny="bottom">scale</aspectratio>
				</control>
				<control type="group">
					<left>{{ScaleX('600')}}</left>
					<top>{{ScaleY('82')}}</top>
					<include>UserRatingCircle</include>
				</control>
				<control type="textbox">
					<left>{{ScaleX('50')}}</left>
					<right>{{ScaleX('50')}}</right>
					<top>{{ScaleY('769')}}</top>
					<bottom>{{ScaleY('105')}}</bottom>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll time="3000" delay="7000" repeat="5000">!System.HasModalDialog + Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
				<control type="scrollbar" id="502600">
					<left>{{ScaleX('20')}}</left>
					<top>{{ScaleY('list_y_offset')}}</top>
					<width>{{ScaleX('12')}}</width>
					<bottom>{{ScaleY('list_y_offset')}}</bottom>
					<onleft>502</onleft>
					<onright>502</onright>
					<orientation>vertical</orientation>
					<animation effect="zoom" end="50,100" time="300" tween="sine" center="{{ScaleBorder2('20,0')}}" easing="inout" condition="!Control.HasFocus(502600)">conditional</animation>
				</control>
				<control type="group">
					<left>{{ScaleX('40')}}</left>
					<top>{{ScaleY('770')}}</top>
					<visible>ListItem.IsCollection</visible>
					<include content="InfoList">
						<param name="bottom" value="{{ScaleY('108')}}" />
						<param name="width" value="{{ScaleX('1000')}}" />
						<param name="sortby" value="year" />
						<param name="sortorder" value="descending" />
						<param name="font" value="font13" />
					</include>
				</control>
			</control>
		</control>
	</include>
</includes>
