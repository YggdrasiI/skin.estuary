<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="ChannelManagerList">
		<control type="grouplist">
			<orientation>horizontal</orientation>
			<left>{{ScaleX('0')}}</left>
			<align>center</align>
			<width>{{ScaleX('510')}}</width>
			<control type="label" id="$PARAM[header_id]">
				<width>{{ScaleX('auto')}}</width>
				<height>{{ScaleY('70')}}</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>button_focus</textcolor>
			</control>
			<control type="label">
				<width>{{ScaleX('auto')}}</width>
				<height>{{ScaleY('70')}}</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>button_focus</textcolor>
				<label>: [COLOR white]$INFO[Container($PARAM[list_id]).Numitems][/COLOR]</label>
			</control>
		</control>
		<control type="image">
			<left>{{ScaleX('0')}}</left>
			<top>{{ScaleY('55')}}</top>
			<width>{{ScaleX('510')}}</width>
			<height>{{ScaleY('740')}}</height>
			<texture border="{{ScaleBorder('40')}}">buttons/dialogbutton-nofo.png</texture>
		</control>
		<control type="list" id="$PARAM[list_id]">
			<left>{{ScaleX('20')}}</left>
			<top>{{ScaleY('75')}}</top>
			<width>{{ScaleX('470')}}</width>
			<height>{{ScaleY('700')}}</height>
			<onup>$PARAM[list_id]</onup>
			<ondown>$PARAM[list_id]</ondown>
			<onleft>$PARAM[onleft]</onleft>
			<onright>$PARAM[scrollbar_id]</onright>
			<pagecontrol>$PARAM[scrollbar_id]</pagecontrol>
			<scrolltime>200</scrolltime>
			<itemlayout height="{{ScaleY('70')}}" width="{{ScaleX('470')}}">
				<control type="image">
					<width>{{ScaleX('60')}}</width>
					<height>{{ScaleY('60')}}</height>
					<right>{{ScaleX('5')}}</right>
					<top>{{ScaleY('5')}}</top>
					<texture>$INFO[ListItem.ActualIcon]</texture>
					<bordertexture colordiffuse="border_alpha">colors/black.png</bordertexture>
					<bordersize>{{ScaleX('2')}}</bordersize>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>{{ScaleX('20')}}</left>
					<right>{{ScaleX('70')}}</right>
					<height>{{ScaleY('70')}}</height>
					<aligny>center</aligny>
					<font>font27</font>
					<textcolor>grey</textcolor>
					<label>$INFO[ListItem.ChannelNumberLabel,[B],[/B] - ]$INFO[ListItem.ChannelName]</label>
				</control>
			</itemlayout>
			<focusedlayout height="{{ScaleY('70')}}" width="{{ScaleX('470')}}">
				<control type="image">
					<left>{{ScaleX('0')}}</left>
					<right>{{ScaleX('0')}}</right>
					<bottom>{{ScaleY('0')}}</bottom>
					<texture colordiffuse="button_focus">lists/focus.png</texture>
					<visible>Control.HasFocus($PARAM[list_id])</visible>
				</control>
				<control type="image">
					<width>{{ScaleX('60')}}</width>
					<height>{{ScaleY('60')}}</height>
					<right>{{ScaleX('5')}}</right>
					<top>{{ScaleY('5')}}</top>
					<texture>$INFO[ListItem.ActualIcon]</texture>
					<bordertexture colordiffuse="border_alpha">colors/black.png</bordertexture>
					<bordersize>{{ScaleX('2')}}</bordersize>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>{{ScaleX('20')}}</left>
					<right>{{ScaleX('70')}}</right>
					<height>{{ScaleY('70')}}</height>
					<font>font27</font>
					<aligny>center</aligny>
					<label>$INFO[ListItem.ChannelNumberLabel,[B],[/B] - ]$INFO[ListItem.ChannelName]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="$PARAM[scrollbar_id]">
			<left>{{ScaleX('495')}}</left>
			<top>{{ScaleY('75')}}</top>
			<width>{{ScaleX('12')}}</width>
			<height>{{ScaleY('700')}}</height>
			<onleft>$PARAM[list_id]</onleft>
			<onright>$PARAM[onright]</onright>
			<ondown>$PARAM[scrollbar_id]</ondown>
			<onup>$PARAM[scrollbar_id]</onup>
			<orientation>vertical</orientation>
		</control>
	</include>
	<include name="PVRInfoPanel">
		<control type="label">
			<top>{{ScaleY('120')}}</top>
			<width>{{ScaleX('540')}}</width>
			<height>{{ScaleY('262')}}</height>
			<font>font45</font>
			<label>$INFO[ListItem.ChannelName]</label>
		</control>
		<control type="image">
			<left>{{ScaleX('520')}}</left>
			<top>{{ScaleY('120')}}</top>
			<width>{{ScaleX('270')}}</width>
			<height>{{ScaleY('220')}}</height>
			<aspectratio align="right">keep</aspectratio>
			<texture fallback="DefaultTVShows.png">$INFO[Listitem.Icon]</texture>
			<fadetime>200</fadetime>
		</control>
		<control type="label">
			<top>{{ScaleY('240')}}</top>
			<width>{{ScaleX('540')}}</width>
			<height>{{ScaleY('262')}}</height>
			<textcolor>grey</textcolor>
			<font>font36_title</font>
			<label>$INFO[ListItem.EpgEventTitle]</label>
		</control>
		<control type="textbox">
			<top>{{ScaleY('380')}}</top>
			<width>{{ScaleX('820')}}</width>
			<bottom>{{ScaleY('75')}}</bottom>
			<label>[B]$INFO[ListItem.EpisodeName,,[CR]][/B]$INFO[ListItem.Plot]</label>
		</control>
		<control type="textbox">
			<top>{{ScaleY('510')}}</top>
			<width>{{ScaleX('790')}}</width>
			<height>{{ScaleY('362')}}</height>
			<align>center</align>
			<font>font27</font>
			<textcolor>80FFFFFF</textcolor>
			<label>$LOCALIZE[19055]</label>
			<visible>String.IsEmpty(Listitem.Plot) + String.IsEmpty(Listitem.Genre)</visible>
		</control>
	</include>
</includes>
